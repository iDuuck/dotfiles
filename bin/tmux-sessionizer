#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    items=`find ~/dev -maxdepth 1 -mindepth 1 -type d`
    items+=`find ~/.dotfiles -maxdepth 1 -mindepth 1 -type d`
    items+=("$HOME/dev")
    items+=("$HOME/.dotfiles")
    selected=`echo "$items" | fzf`
fi

tmux_session_name=`basename $selected | tr . _`

# Make use of the `tat` binary.
tat $selected
